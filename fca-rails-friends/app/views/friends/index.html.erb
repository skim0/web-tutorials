<h1>Friends</h1>

  <% if user_signed_in? %>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Social</th>
          <th> </th>
        </tr>
      </thead>

      <tbody>
        <% @friends.each do |friend| %>
          <% if friend.user == current_user %>
          <tr>
            <td>
              <%= link_to friend.first_name + ' ' + friend.last_name, friend %>
            </td>
            
            <td><%= friend.email %></td>
            <td><%= friend.phone %></td>
            <td><%= friend.social %></td>

            <td>
              <%= link_to 'Show', friend, class: "btn btn-info btn-sm" %>
              <%= link_to 'Edit', edit_friend_path(friend), class: "btn btn-secondary btn-sm" %>
            </td>
            
          </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>

    <br>

  <%= link_to "New friend", new_friend_path, class: "btn btn-primary btn-sm" %>

<% else %>

<h2>ㄱㄴㄷㄹ</h2>

<% end %>
